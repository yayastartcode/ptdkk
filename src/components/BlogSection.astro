---

<section class="bg-zinc-900 py-20">
    <div class="container mx-auto px-6">
        <h2 class="text-4xl font-bold text-center text-yellow-400 mb-4">Latest News & Tips</h2>
        <p class="text-center mb-12 text-yellow-100 max-w-3xl mx-auto">Stay updated with our latest articles, industry insights, and maintenance tips.</p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {blogPosts.map((post) => (
                <article class="bg-black/50 backdrop-blur-sm rounded-lg overflow-hidden border border-yellow-400/20 hover:border-yellow-400/40 transition-all duration-300 group">
                    <div class="relative h-48 overflow-hidden">
                        <img 
                            src={post.image} 
                            alt={post.title}
                            class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent"></div>
                        <span class="absolute top-4 left-4 bg-yellow-400 text-black text-sm font-bold px-3 py-1 rounded">
                            {post.category}
                        </span>
                    </div>
                    <div class="p-6">
                        <div class="flex items-center text-yellow-100/70 text-sm mb-3">
                            <i class="fas fa-calendar-alt mr-2 text-yellow-400"></i>
                            {post.date}
                            <span class="mx-2">â€¢</span>
                            <i class="fas fa-user mr-2 text-yellow-400"></i>
                            {post.author}
                        </div>
                        <h3 class="text-xl font-bold mb-3 text-yellow-400 group-hover:text-yellow-300 transition-colors duration-300">
                            {post.title}
                        </h3>
                        <p class="text-yellow-100 mb-4">{post.excerpt}</p>
                        <a href="#" class="inline-flex items-center text-yellow-400 hover:text-yellow-300 transition-colors duration-300">
                            Read More 
                            <i class="fas fa-arrow-right ml-2 text-sm"></i>
                        </a>
                    </div>
                </article>
            ))}
        </div>

        <div class="text-center mt-12">
            <a href="#" class="inline-flex items-center bg-yellow-400 hover:bg-yellow-500 text-black font-bold py-3 px-8 rounded transition-colors duration-300">
                View All Posts
                <i class="fas fa-arrow-right ml-2"></i>
            </a>
        </div>
    </div>
</section> 