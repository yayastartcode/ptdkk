    {
        title: "Latest Innovations in Truck Body Manufacturing",
        date: "March 15, 2024",
        image: "https://images.unsplash.com/photo-1601584115197-04ecc0da31d7?q=80&w=2070&auto=format&fit=crop",
        excerpt: "Discover the cutting-edge technologies and materials we're using to revolutionize truck body manufacturing.",
        category: "Karoseri",
        author: "John Smith"
    },
    {
        title: "Preventive Maintenance Tips for Fleet Vehicles",
        date: "March 10, 2024",
        image: "https://images.unsplash.com/photo-1487754180451-c456f719a1fc?q=80&w=1932&auto=format&fit=crop",
